{% macro render(settings, count) %}
{% import "components/Header/_menu.njk" as Menu %}

<!-- Preloader -->
 
 <!-- <div id="loading">
    <div class="preloader">
     <img src="./image/preloader.gif" alt="preloader">
   </div>
   </div>    -->

<!--Site Header Area -->

<header
  class="site-header{{ ' ' + settings.additional_header_class if settings.additional_header_class }}{{ ' site-header--absolute' if settings.absolute_header}}{{ ' site-header--sticky' if settings.sticky_header}}{{ ' mobile-sticky-enable' if settings.mobile_sticky}}">
  <div
    class="container{{ '-fluid' if  settings.container_fluid}}{{' ' + settings.container_fluid_class if  settings.container_fluid_class}}">
    <nav class="navbar site-navbar">
      <!-- Brand Logo-->
      <div class="brand-logo">
        <a href="#">

          <!-- light version logo (logo must be black)-->
          <img src="{{ settings.root }}image/logo/logo-black.png" alt="" class="light-version-logo">

          <!-- Dark version logo (logo must be White)-->
          <img src="{{settings.root}}image/logo/logo-white.png" alt="" class="dark-version-logo">

        </a>
      </div>

      <div class="menu-block-wrapper">
        <div class="menu-overlay"></div>
        <nav class="menu-block" id="append-menu-header">
          <div class="mobile-menu-head">
            <div class="go-back">
              <i class="fa fa-angle-left"></i>
            </div>
            <div class="current-menu-title"></div>
            <div class="mobile-menu-close">&times;</div>
          </div>
          {{Menu.render(settings.root,settings.elmRoot,
          settings.hideMegamenu,settings.dropDownStyleTwo,settings.megamenuPosition)}}
        </nav>

      </div>
      {% if settings.header_button_custom %}
      {{ settings.header_button_custom | safe}}
      {% endif %}
      {% if settings.header_button %}
      <div class="header-btn {{  settings.additional_button_classes}}">
        <a target="_blank" class="btn {{ settings.header_button_class}}" href="https://observablehq.com/collection/@endpointservices/webcode-run">
          {{ settings.header_button_text}}
        </a>
      </div>
      {% endif %}
      {% if settings.header_double_button %}
      <div class="header-btns  {{  settings.additional_db_classes}}">
        <a class="{{ settings.header_button_class_1}}" href="https://observablehq.com/collection/@endpointservices/webcode-run">
          {{ settings.header_button_text_1}}
        </a>
        <a class="{{ settings.header_button_class_2}}" href="https://observablehq.com/collection/@endpointservices/webcode-run">
          {{ settings.header_button_text_2}}
        </a>
      </div>
      {% endif %}
      
      <!-- mobile menu trigger -->
      <div class="mobile-menu-trigger">
        <span></span>
      </div>
      <!--/.Mobile Menu Hamburger Ends-->
    </nav>
  </div>
</header>
<!-- navbar-{{ settings.navbar_mode}} -->
{% endmacro %}